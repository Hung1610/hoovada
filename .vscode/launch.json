    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "FLASK_APP":"app.manage:flask_app"
            },
            "args": [
                "run",
                "--port=5100"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask Migrate",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "db",
                "migrate"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask Upgrade",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "db",
                "upgrade"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask Gunicorn",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "gevent": true,
            "program": "venv/bin/gunicorn",
            "args": [
                "-c",
                "docker/app/gunicorn_conf.py",
                "app.manage:flask_app"
            ]
        },
        {
            "name": "Python: Dramatiq",
            "type": "python",
            "request": "launch",
            "module": "dramatiq",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "app.manage_dramatiq:broker"
            ],
            "jinja": true
        },
        {
            "name": "Python: APScheduler",
            "type": "python",
            "request": "launch",
            "module": "scheduled_jobs.manage",
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Python: Flask SocketIO",
            "type": "python",
            "request": "launch",
            "module": "app_socketio.app",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "jinja": true
        }
    ]
}